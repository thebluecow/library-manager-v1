extends ./layout.pug

block content
	include ./partials/_nav.pug

	h1 Patrons
	p
		a.button(href='/patron/new') Create New Patron
	table
		thead
			tr
				th Name 
				th Address
				th Email
				th Library ID
				th Zip
		tbody
			each patron in patrons
				tr
					td
						a(href='/patron/' + patron.id) #{patron.fullName}
					td #{patron.address}
					td #{patron.email}
					td #{patron.library_id}
					td #{patron.zip_code}
					
	p
		if (offsets.prev)
			a.paginate(href='/patron?page=' + offsets.prevpage) << Prev
		if (offsets.next)
			a.paginate(href='/patron?page=' + offsets.nextpage) Next >>